@page "/acompanhar-ciclo-menstrual"

<div class="cycle-info-container">

    <!-- Header -->
    <div class="header">
        <button class="back-btn">← Ir para Inicial</button>
        <div class="cycle-status">
            <div class="cycle-day active">01</div>
            <div class="cycle-day current">02</div>
            <div class="cycle-day">03</div>
        </div>
        <p class="menstruation-info">Possível menstruação <span class="date">18/10</span></p>
    </div>

    <!-- Informações do Dia -->
    <div class="day-info">
        <h3>Informações do dia</h3>
        <p><strong>Período:</strong> <span class="fertile">Fértil</span></p>
        <p><strong>Sintomas</strong></p>
        <ul class="symptoms">
            <li class="highlight">Muita secreção</li>
            <li class="highlight">Alta libido</li>
            <li class="highlight">Dores de cabeça</li>
        </ul>
        <p><strong>Notas</strong></p>
        <p>Hoje eu me senti ...</p>
    </div>

    <!-- Action Buttons -->
    <div class="action-buttons">
        <button class="add-note-btn">+ Adicionar nota</button>
        <button class="add-menstruation-btn">+ Adicionar menstruação</button>
    </div>

    <!-- Bottom Navigation -->
    <nav class="bottom-nav">
        <button class="nav-item active">Início</button>
        <button class="nav-item">Diário</button>
        <button class="nav-item add-btn">+</button>
        <button class="nav-item">Consultas</button>
        <button class="nav-item">Conversas</button>
    </nav>

</div>

